<% layout("/layouts/boilerplate") -%>

    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h2>Edit Listing</h2>
            <form method="POST" action="/listings/<%=listing._id  %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <lable for="title" class="form-label">Title</lable>
                    <input name="listing[title]" value="<%= listing.title  %>" type="text" class="form-control" required>
                    <div class="valid-feedback">Title looks good !</div>
                </div>
                <div class="mb-3">
                    <lable for="description" class="form-label">Description</lable>
                    <textarea name="listing[description]" rows="5" cols="20" class="form-control" required><%= listing.description %> </textarea>
                    <div class="invalid-feedback">Please provide a description.</div>
                </div>
                <div class="mb-3">
                    <img src="<%= originalImageUrl  %>" style="height: 15rem; width: 15rem;" />
                </div>
                <div class="mb-3">
                    <lable for="image" class="form-label">Upload New Image </lable>
                    <input name="listing[image]"  type="file" class="form-control" >
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <lable for="price" class="form-label">Price</lable>
                        <input name="listing[price]" value="<%= listing.price  %>" class="form-control" required>
                        <div class="invalid-feedback">Price must be written !</div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <lable for="country" class="form-label">Country</lable>
                        <input name="listing[country]" value="<%= listing.country  %>" type="text" class="form-control" required>
                        <div class="invalid-feedback">Please provide country name.</div>
                    </div>
                </div>

                <div class="mb-3">
                    <lable for="location" class="form-label">Location</lable>
                    <input name="listing[location]" value="<%= listing.location %>" type="text" class="form-control" required>
                    <div class="invalid-feedback">Please provide location.</div>
                </div>

        
                <button class="btn btn-dark btn-color mt-3">Edit</button>
                <br><br>
        
            </form>
        </div>
    </div>

    

